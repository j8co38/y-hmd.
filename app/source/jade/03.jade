	include ./templates/_head.jade
	body
		#js-loaderbg
			#js-loader
				img(src="./images/loading.gif" alt="")
		#wrap
			#bg
			nav
				ul
					li: a(href="index.html") HOME
					li: a(href="works.html") works
					li: a(href="index.html#about") about
					li: a(href="#contact") contact
			#container
				header
					span.menu-trigger(href="#")
						span
						span
						span
				#mainVisual
					#js-fadeText
						span YUIKO HAMADA's
						span portfolio site
				section#contents
					section#works
						h2 works
						.works-single
							h3 日本の伝統文様100選
							span.date WEB / 2015.1
							.top-img
								img(src="./images/works/03.png" alt="日本の伝統文様100選")
							.single-top.clearfix
								.summary
									dl
										dt 制作期間
										dd 2014.12-2015.1
										dt 担当範囲
										dd すべて
										dt 使用ソフト・技術
										dd IllustratorCS6 / PhotoshopCS6 / HTML5 / CSS3 / jQuery
										dt URL
										dd: a(href="https://y-hmd.com/ja100" target="_blank") https://y-hmd.com/ja100
